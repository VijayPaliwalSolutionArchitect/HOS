# ===========================================
# Multi-Tenant EdTech SaaS Platform
# Environment Variables
# ===========================================

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/edtech_saas?schema=public"

# ===========================================
# NEXTAUTH V5 CONFIGURATION
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here-min-32-chars"
AUTH_URL="http://localhost:3000"

# ===========================================
# OAUTH PROVIDERS
# ===========================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ===========================================
# REDIS
# ===========================================
# For exam state locking, session caching, rate limiting
REDIS_URL="redis://localhost:6379"

# ===========================================
# OPENAI (AI Question Generation)
# ===========================================
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4-turbo-preview"

# ===========================================
# STRIPE (Billing - Optional)
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@yourdomain.com"

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="EdTech SaaS"

# AI Features Toggle
NEXT_PUBLIC_AI_ENABLED="true"

# ===========================================
# FILE STORAGE (Optional - AWS S3, Cloudinary, etc.)
# ===========================================
# S3_BUCKET=""
# S3_REGION=""
# S3_ACCESS_KEY_ID=""
# S3_SECRET_ACCESS_KEY=""

# ===========================================
# MONITORING & LOGGING (Optional)
# ===========================================
# SENTRY_DSN=""
# LOGFLARE_API_KEY=""
